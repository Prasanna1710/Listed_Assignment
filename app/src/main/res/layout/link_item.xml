<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/linkThumnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/amazon_icon"
            android:layout_marginStart="12dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="4">
            <TextView
                android:id="@+id/sampleLinkNameTv"
                android:layout_width="120dp"
                android:layout_height="24dp"
                tools:text="sample link"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="12dp" />
            <TextView
                android:id="@+id/sampleLinkTimeAgoTv"
                android:layout_width="120dp"
                android:layout_height="24dp"
                tools:text="22 Aug 23"
                android:textSize="14sp"
                android:textColor="#999CA0"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/clicksTv"
                android:layout_width="120dp"
                android:layout_height="24dp"
                tools:text="1200"
                android:textAlignment="viewEnd"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="12dp" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="24dp"
                android:text="clicks"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                android:textColor="#999CA0"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/lightest_blue">
        <TextView
            android:id="@+id/linkTv"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            tools:text="https://google.com"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/figtree_regular"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="30dp"
            android:src="@drawable/copy_icon"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>